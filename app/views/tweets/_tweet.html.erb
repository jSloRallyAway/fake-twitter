<div = class="tweet">

	<h3><%= link_to(tweet.title, tweet) %> </h3>
	<% if tweet.user %>
	<p>By: <%= link_to(tweet.user.email, tweet.user) %></p>
	<% end %>
	<!-- OR <p> <%= tweet.user.try(:email) || 'Anonymous User' %> </p> -->


	<p> <%= tweet.body %> </p>
	<% if tweet.image? %>
	<p> <%= link_to_image(tweet.image) %> </p>
	<% end %>

	<% if tweet.admin_or_belongs_to?(current_user) %>
		<ul>
			<li><%= edit_tweet_link(tweet) %></li>
			<li><%= delete_tweet_link(tweet) %></li>
		</ul>
	<% end  %>

</div>